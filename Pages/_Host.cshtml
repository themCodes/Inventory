@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace Inventory.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!-- Get the user information and store it in a variable that will be sent to App.razor. -->
@{
    var state = new InitialApplicationState();
    state.IsAuthenticated = HttpContext.User.Identity.IsAuthenticated;
    state.UserName = HttpContext.User.Identity.Name;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />

    <!-- Custom added css file that's globally available. -->
    <link rel="stylesheet" href="css/custom.css" />

    <link href="css/site.css" rel="stylesheet" />
    <link href="Inventory.styles.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="favicon.png"/>
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <component type="typeof(App)" param-InitialState="state" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>
